<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:id="@+id/scrollViewDetalleEntregaHistorial"> <LinearLayout
    android:id="@+id/linearLayoutContenedor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

        <TextView
            android:id="@+id/textClienteHistorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Cliente: " />

        <TextView
            android:id="@+id/textClienteDniHistorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DNI: " />

        <TextView
            android:id="@+id/textProductoHistorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Producto: " />

        <TextView
            android:id="@+id/textRutaIdHistorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ruta ID: " />

        <TextView
            android:id="@+id/textEstadoIdHistorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado: " />

        <TextView
            android:id="@+id/textFechaCreacionHistorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha Creación: " />

        <TextView
            android:id="@+id/textFechaAsignacionHistorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha Asignación: " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Ubicación de la Entrega:" />

        <View
            android:id="@+id/mapPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:background="@color/white" />

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapViewDetalleHistorial"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/white"
            android:visibility="gone" />


        <TextView
            android:id="@+id/textViewOrigenHistorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Origen: " />

        <TextView
            android:id="@+id/textViewDestinoHistorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Destino: " />

        <Button
            android:id="@+id/btnVolverHistorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Volver" />

    </LinearLayout>
</ScrollView>